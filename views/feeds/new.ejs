<%- include("../partials/header") %>

<div class="container">
    <h1 class="text-primary text-center">New Feed</h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/feeds" method="post">
                <div class="form-group">
                    <h6 class="text-warning text-center">Title</h6>
                    <input class="form-control" type="text" name="title" placeholder="What's on Your Mind??">
                </div>
                <div class="form-group">
                    <h6 class="text-warning text-center">Image</h6>
                    <input class="form-control" type="text" name="image" placeholder="Image">
                </div>
                <div class="form-group">
                    <h6 class="text-warning text-center">Details</h6>
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-block btn-outline-success" type="submit">New Feed</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
<%- include("../partials/header") %>

<div class="container">
    <h1 class="text-primary text-center">Add New Comment To <%= feed.title %></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/<%= feed._id %>/comment" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-outline-success" type="submit">Add Comment</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
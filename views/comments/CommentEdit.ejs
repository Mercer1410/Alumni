<%- include("../partials/header") %>

<div class="container" data-aos="flip-left" data-aos-duration="2000">
    <h1 class="Title">Edit your Comment <%= currentUser.username %></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/<%= feed_id %>/comment/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <h6 class="text-danger text-center">Comment</h6>
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-outline-success" type="submit">Update Yor Comment</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
<%- include("./partials/header") %>

<div class="container">
    <h1 class="Title" data-aos="zoom-in" data-aos-duration="1000">Login</h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/login" method="post">
                <div class="form-group" data-aos="fade-right" data-aos-duration="2000">
                    <h6 class="text-warning text-center">Username</h6>
                    <input class="form-control" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group" data-aos="fade-left" data-aos-duration="2000">
                    <h6 class="text-warning text-center">Password</h6>
                    <input class="form-control" type="password" name="password" placeholder="Password">
                </div>
                <div class="form-group" data-aos="zoom-in" data-aos-duration="2000">
                    <button class="btn btn-lg btn-block btn-outline-success" type="submit">Login</button>
                </div>
            </form>
            <h5 class="text-center" data-aos="zoom-in" data-aos-duration="2000"><a href="/forgot">Forgot Password</a></h5>
        </div>
    </div>
</div>

<%- include("./partials/footer") %>
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <!-- FONTAWESOME CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    
    <!-- DATA AOS -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <!-- MAP -->
    <script src="https://api.mapbox.com/mapbox-gl-js/v1.9.1/mapbox-gl.js"></script>
    <link
      href="https://api.mapbox.com/mapbox-gl-js/v1.9.1/mapbox-gl.css"
      rel="stylesheet"
    />

    <!-- LOCAL CSS -->
    <link rel="stylesheet" href="/stylesheets/style.css">

    <title>MILAP - Multiple Interconnected Locus for Alumni Protocol</title>
  </head>
  <body>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a href="/" class="navbar-brand">
            <img src="/logo.png" width="30px" height="30px" class="d-inline-block align-top" alt="Logo">
            MILAP
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navCollapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="/home" class="nav-link">HOME</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <% if(!currentUser){ %>
                    <li class="nav-item">
                        <a href="/login" class="nav-link"><i class="fas fa-user"></i> Login</a>
                    </li>
                    <li class="nav-item">
                        <a href="/register" class="nav-link"><i class="fas fa-user-plus"></i> Sign-Up</a>
                    </li>
                <% }else{ %>
                    <li class="nav-item">
                        <a href="/users/<%= currentUser._id %>" class="nav-link">Welcome <%= currentUser.username %></a>
                    </li>
                    <li class="nav-item">
                        <a href="/feeds" class="nav-link">Feeds</a>
                    </li>
                    <li class="nav-item">
                        <a href="/feeds/new" class="nav-link">New Feed</a>
                    </li>
                    <li class="nav-item">
                        <a href="/users/<%= currentUser._id %>/events" class="nav-link">Events</a>
                    </li>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link">Log Out</a>
                    </li>
                <% } %>
            </ul>
        </div>
      </nav>

      <div class="container mt-5">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger text-center p-3" role="alert"><h4><%= error %></h4></div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success text-center p-3" role="alert"><h4><%= success %></h4></div>
        <% } %>
        </div>
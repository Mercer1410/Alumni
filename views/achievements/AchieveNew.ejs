<%- include("../partials/header") %>

<div class="container">
    <h1 class="text-primary text-center">Add New Achievement Of <%= user.username %></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/users/<%= user._id %>/achievement" method="post">
                <div class="form-group">
                    <h6 class="text-warning text-center">Date</h6>
                    <input class="form-control" type="date" name="achieve[date]">
                </div>
                <div class="form-group">
                    <h6 class="text-warning text-center">Details</h6>
                    <input class="form-control" type="text" name="achieve[detail]" placeholder="Add Details">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-block btn-outline-success" type="submit">Add Achievement</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
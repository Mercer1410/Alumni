<%- include("./partials/header") %>

<div class="container" data-aos="flip-left" data-aos-duration="2000">
    <h1 class="Title">Sign Up</h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/register" method="post">
                <div class="form-group">
                    <h6 class="text-warning text-center">Username</h6>
                    <input class="form-control" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <h6 class="text-warning text-center">First Name</h6>
                    <input class="form-control" type="text" name="firstName" placeholder="First Name">
                </div>
                <div class="form-group">
                    <h6 class="text-warning text-center">Last Name</h6>
                    <input class="form-control" type="text" name="lastName" placeholder="Last Name">
                </div>
                <div class="form-group">
                    <h6 class="text-warning text-center">Avatar</h6>
                    <input class="form-control" type="text" name="avatar" placeholder="Avatar">
                </div>
                <div class="form-group">
                    <h6 class="text-warning text-center">Place</h6>
                    <input class="form-control" type="text" name="place" placeholder="Where are you From?">
                </div>
                <div class="form-group">
                    <h6 class="text-warning text-center">Email</h6>
                    <input class="form-control" type="email" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <h6 class="text-warning text-center">Password</h6>
                    <input class="form-control" type="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-outline-success" type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("./partials/footer") %>
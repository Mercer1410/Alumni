<%- include("partials/header") %>

<div class="container" data-aos="flip-left" data-aos-duration="2000">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
          <legend class="Title">Reset Password</legend>
            <form action="/reset/<%= token %>" method="POST">
              <div class="form-group">
                <label for="password" class="text-danger">New Password</label>
                <input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control"/>
              </div>
              <div class="form-group">
                <label for="confirm" class="text-danger">Confirm Password</label>
                <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-lg btn-outline-success btn-block">Update Password</button>
              </div>
            </form>
        </div>
    </div>
</div>

<%- include("partials/footer") %>
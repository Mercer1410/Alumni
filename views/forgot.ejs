<%- include("partials/header") %>
<div class="container" data-aos="flip-left" data-aos-duration="2000">
    <div class="row">
        <legend class="Title">Forgot Password</legend>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/forgot" method="POST">
                <div class="form-group">
                    <h6 class="text-danger text-center">Email</h6>
                    <input type="email" name="email" autofocus class="form-control" placeholder="Your Email">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-outline-success" type="submit">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("partials/footer") %>
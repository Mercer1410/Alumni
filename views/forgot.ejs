<%- include("partials/header") %>
<div class="container">
    <div class="row">
        <legend class="Title" data-aos="zoom-in" data-aos-duration="1000">Forgot Password</legend>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/forgot" method="POST">
                <div class="form-group" data-aos="fade-right" data-aos-duration="2000">
                    <h6 class="text-danger text-center">Email</h6>
                    <input type="email" name="email" autofocus class="form-control" placeholder="Your Email">
                </div>
                <div class="form-group" data-aos="zoom-in" data-aos-duration="2000">
                    <button class="btn btn-lg btn-block btn-outline-success" type="submit">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("partials/footer") %>
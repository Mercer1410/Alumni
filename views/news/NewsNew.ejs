<%- include("../partials/header") %>

<div class="container">
    <h1 class="text-primary text-center">Tell us What's Going on with you <%= user.username %> ?</h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/users/<%= user._id %>/news" method="post">
                <div class="form-group">
                    <input class="form-control" type="date" name="news[date]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="news[detail]" placeholder="Add Details">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-outline-success" type="submit">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>